---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="min-h-screen">
		<!-- Hero Section -->
		<section class="bg-indigo-600 text-white py-20 px-6">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-5xl font-bold mb-6">Stop Overpaying. Start Tracking.</h1>
				<p class="text-xl text-indigo-100 mb-10">
					The secure, self-hosted way to manage recurring expenses, split bills with housemates, and forecast your financial future.
				</p>
				<div class="flex justify-center gap-4">
					<a href="https://app.billmanager.app/register" class="bg-white text-indigo-600 px-8 py-3 rounded-lg font-semibold hover:bg-indigo-50 transition">
						Get Started
					</a>
					<a href="#features" class="border border-indigo-400 text-white px-8 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition">
						Learn More
					</a>
				</div>
			</div>
		</section>

		<!-- Features Grid -->
		<section id="features" class="py-20 px-6">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-3xl font-bold text-center mb-16 text-slate-800">Everything you need to stay on top</h2>
				<div class="grid md:grid-cols-3 gap-8">
					<!-- Feature 1 -->
					<div class="bg-white p-8 rounded-xl shadow-sm border border-slate-100">
						<div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-6 text-indigo-600">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
						</div>
						<h3 class="text-xl font-bold mb-3">Recurring Intelligence</h3>
						<p class="text-slate-600">Never miss a due date. Track monthly, weekly, or custom schedules for all your bills and subscriptions.</p>
					</div>

					<!-- Feature 2 -->
					<div class="bg-white p-8 rounded-xl shadow-sm border border-slate-100">
						<div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-6 text-green-600">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
						</div>
						<h3 class="text-xl font-bold mb-3">Multi-User Tenancy</h3>
						<p class="text-slate-600">Share with family or housemates. Keep personal bills private and household bills shared with easy toggle controls.</p>
					</div>

					<!-- Feature 3 -->
					<div class="bg-white p-8 rounded-xl shadow-sm border border-slate-100">
						<div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-6 text-purple-600">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
						</div>
						<h3 class="text-xl font-bold mb-3">Financial Forecasting</h3>
						<p class="text-slate-600">See your projected balance 6 months out based on your recurring income and expenses.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Pricing -->
		<section id="pricing" class="bg-slate-900 text-white py-20 px-6">
			<div class="max-w-6xl mx-auto text-center">
				<h2 class="text-3xl font-bold mb-4">Simple, Transparent Pricing</h2>
				<p class="text-slate-400 mb-8">Start with a 14-day free trial. No credit card required.</p>

				<!-- Billing Toggle -->
				<div class="flex items-center justify-center gap-4 mb-12">
					<span class="text-slate-400" id="monthly-label">Monthly</span>
					<button id="billing-toggle" class="relative w-14 h-7 bg-slate-700 rounded-full transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500" onclick="toggleBilling()">
						<span id="toggle-dot" class="absolute left-1 top-1 w-5 h-5 bg-white rounded-full transition-transform"></span>
					</button>
					<span class="text-slate-400" id="yearly-label">Yearly <span class="text-green-400 text-sm">(Save 17%)</span></span>
				</div>

				<div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
					<!-- Free Tier -->
					<div class="bg-slate-800 p-8 rounded-2xl border border-slate-700 hover:border-slate-600 transition duration-300">
						<div class="text-lg text-slate-400 mb-2">Free</div>
						<div class="text-5xl font-bold mb-2">$0</div>
						<div class="text-slate-500 mb-6">Forever free</div>
						<ul class="text-left mb-8 space-y-3">
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								Up to 10 Bills
							</li>
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								1 User
							</li>
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								1 Workspace
							</li>
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								Payment History
							</li>
						</ul>
						<a href="https://app.billmanager.app/register" class="block w-full bg-slate-700 hover:bg-slate-600 text-white font-bold py-3 px-4 rounded-lg transition">
							Get Started
						</a>
					</div>

					<!-- Basic Tier -->
					<div class="bg-slate-800 p-8 rounded-2xl border-2 border-indigo-500 relative hover:border-indigo-400 transition duration-300">
						<div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-indigo-500 text-white text-sm font-bold px-4 py-1 rounded-full">Most Popular</div>
						<div class="text-lg text-slate-400 mb-2">Basic</div>
						<div class="text-5xl font-bold mb-2">
							<span id="basic-price">$5</span>
							<span class="text-xl text-slate-500 font-normal" id="basic-interval">/mo</span>
						</div>
						<div class="text-slate-500 mb-6" id="basic-annual-note">or $50/year</div>
						<ul class="text-left mb-8 space-y-3">
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								Unlimited Bills
							</li>
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								2 Users
							</li>
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								1 Workspace
							</li>
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								Email Support
							</li>
						</ul>
						<a href="https://app.billmanager.app/register" class="block w-full bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-3 px-4 rounded-lg transition">
							Start 14-Day Trial
						</a>
					</div>

					<!-- Plus Tier -->
					<div class="bg-slate-800 p-8 rounded-2xl border border-slate-700 hover:border-indigo-500 transition duration-300">
						<div class="text-lg text-slate-400 mb-2">Plus</div>
						<div class="text-5xl font-bold mb-2">
							<span id="plus-price">$7.50</span>
							<span class="text-xl text-slate-500 font-normal" id="plus-interval">/mo</span>
						</div>
						<div class="text-slate-500 mb-6" id="plus-annual-note">or $75/year</div>
						<ul class="text-left mb-8 space-y-3">
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								Unlimited Bills
							</li>
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								5 Users
							</li>
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								3 Workspaces
							</li>
							<li class="flex items-center gap-3">
								<svg class="text-green-400 w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
								Priority Support
							</li>
						</ul>
						<a href="https://app.billmanager.app/register" class="block w-full bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-3 px-4 rounded-lg transition">
							Start 14-Day Trial
						</a>
					</div>
				</div>
			</div>
		</section>

		<script>
			let isYearly = false;

			function toggleBilling() {
				isYearly = !isYearly;
				const dot = document.getElementById('toggle-dot');
				const monthlyLabel = document.getElementById('monthly-label');
				const yearlyLabel = document.getElementById('yearly-label');

				if (isYearly) {
					dot.style.transform = 'translateX(28px)';
					monthlyLabel.classList.remove('text-white');
					monthlyLabel.classList.add('text-slate-400');
					yearlyLabel.classList.remove('text-slate-400');
					yearlyLabel.classList.add('text-white');

					document.getElementById('basic-price').textContent = '$50';
					document.getElementById('basic-interval').textContent = '/yr';
					document.getElementById('basic-annual-note').textContent = '$4.17/month';

					document.getElementById('plus-price').textContent = '$75';
					document.getElementById('plus-interval').textContent = '/yr';
					document.getElementById('plus-annual-note').textContent = '$6.25/month';
				} else {
					dot.style.transform = 'translateX(0)';
					monthlyLabel.classList.remove('text-slate-400');
					monthlyLabel.classList.add('text-white');
					yearlyLabel.classList.remove('text-white');
					yearlyLabel.classList.add('text-slate-400');

					document.getElementById('basic-price').textContent = '$5';
					document.getElementById('basic-interval').textContent = '/mo';
					document.getElementById('basic-annual-note').textContent = 'or $50/year';

					document.getElementById('plus-price').textContent = '$7.50';
					document.getElementById('plus-interval').textContent = '/mo';
					document.getElementById('plus-annual-note').textContent = 'or $75/year';
				}
			}

			// Set initial state
			document.getElementById('monthly-label').classList.add('text-white');
		</script>

		<!-- Footer -->
		<footer class="bg-slate-50 py-12 px-6 border-t border-slate-200">
			<div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center text-slate-500 text-sm">
				<div>&copy; {new Date().getFullYear()} BillManager. All rights reserved.</div>
				<div class="flex gap-6 mt-4 md:mt-0">
					<a href="#" class="hover:text-indigo-600">Privacy Policy</a>
					<a href="#" class="hover:text-indigo-600">Terms of Service</a>
				</div>
			</div>
		</footer>
	</main>
</Layout>